{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "/@/*": ["src/*"]
    },
    "types": ["vite/client"]
  }
}
